{
  "manifest_version": 2,
  "name": "Phone",
  "version": "1.0.0",
  "description": "A simple phone app for making and receiving voice calls directly from Chrome. Uses SIP.js",

  "permissions": [
    "storage",
    "notifications",
    "background",
    "*://*/*",
    "windows"
  ],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png"
  },

  "background": {
    "page": "background.html",
    "persistent": true
  },

  "web_accessible_resources": [
    "audio/ring1.ogg",
    "audio/dial1.ogg",
    "audio/hangup1.ogg"
  ]
}
