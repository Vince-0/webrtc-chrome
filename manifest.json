{
  "manifest_version": 2,
  "name": "WebRTC SIP Client",
  "version": "1.0.0",
  "description": "A WebRTC-based SIP client for making and receiving voice calls directly from Chrome",

  "permissions": [
    "storage",
    "notifications",
    "background",
    "*://*/*"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png"
  },

  "background": {
    "page": "background.html",
    "persistent": true
  }
}
